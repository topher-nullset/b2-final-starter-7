<%= render partial: "shared/nav" %>

<body>
  <div class="row">
    <p class='col-12'>My Discounts</p>
  </div>

  <p><%= link_to "Create New Discount", new_merchant_discount_path(@merchant) %></p>

  <% @discounts.each do |discount| %>
    <p><%= link_to "Discount ##{discount.id}", merchant_discount_path(@merchant, discount) %></p>
    <p>Discount:   %<%= discount.percentage.to_i %></p>
    <p>Min Quantity: <%= discount.threshold %> items</p>
    <p><strong><%= link_to "Delete Discount ##{discount.id}", merchant_discount_path(@merchant, discount), method: :delete %></strong></p>
  <% end %>
</body>